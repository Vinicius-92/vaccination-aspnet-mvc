@model Vaccination.Models.DTO.VaccineDTO
@{
    Layout = "_Layout";
}

<div class="form-group float-right">
    <a asp-controller="VaccinationPoint" asp-action="Index" class="btn btn-dark">Return to list</a>
</div>

<h2>Create a new vaccine</h2>

<h4>Vaccine information</h4>
<hr>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Vaccine">
            <div asp-validation-summary="All" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Laboratory" class="control-label"></label>
                <input asp-for="Laboratory" class="form-control" />
                <span asp-validation-for="Laboratory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Posology">Select posology</label>
                <select class="form-control" asp-for="Posology">
                    <option value="0">Single dose</option>
                    <option value="1">Double dose</option>
                </select>
             </div>

            <div class="form-group">
                <label asp-for="IntervalBetweenDoses" class="control-label">Interval between doses (days) </label>
                <input asp-for="IntervalBetweenDoses" class="form-control" />
                <span asp-validation-for="IntervalBetweenDoses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" method="POST" value="Create" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidatioNscriptsPartial");}
}