@model Vaccination.Models.DTO.VaccineDTO
@{
    Layout = "_Layout";
}

<div class="form-group float-right">
    <a asp-controller="Vaccine" asp-action="Index" class="btn btn-dark">Return to list</a>
</div>

<h2>Edit a vaccine</h2>

<h4>Vaccine information</h4>
<hr>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Vaccine">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id">
           
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Laboratory" class="control-label"></label>
                <input asp-for="Laboratory" class="form-control" />
                <span asp-validation-for="Laboratory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Posology">Select posology</label>
                <select class="form-control" asp-for="Posology">
                    <option value="0">Single dose</option>
                    <option value="1">Double dose</option>
                </select>
             </div>

            <div class="form-group">
                <label asp-for="IntervalBetweenDoses" class="control-label">Interval between doses </label>
                <input asp-for="IntervalBetweenDoses" class="form-control" />
                <span asp-validation-for="IntervalBetweenDoses" class="text-danger"></span>
            </div>
             <form asp-action="Edit" asp-controller="Vaccine">
                <div class="form-group ml-1">
                    <button asp-controller="Vaccine" asp-action="Edit" method="POST" value="Id" type="subtmit" class="btn btn-primary">Save updates</button>
                </div>
            </form>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidatioNscriptsPartial");}
}