@model IEnumerable<Vaccination.Models.DTO.PersonDTO>
@{
    Layout = "_Layout";
}

<h2>People</h2>
<hr>

<a asp-action="Create" asp-controller="Person" class="btn btn-primary">Create new person register</a>
<hr>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">CPF</th>
      <th scope="col">City</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
      @foreach (var person in Model)
      {
        <tr>
            <th scope="row">@person.Id</th>
            <td>@person.Name</td>
            <td>@person.Cpf</td>
            <td>@person.AddressDTO.City</td>
            <td>
              <td style="display: inline;">
                <a asp-action="Details" asp-route-id="@person.Id" class="mt-2 btn btn-primary">More info</a>
              </td> 
            </td>
        </tr>
      }
  </tbody>
</table>